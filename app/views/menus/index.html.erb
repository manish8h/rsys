<%= link_to 'Home', welcome_index_path %>

<h1>Listing All Menus</h1>

<table>
  <tr>
    <th>Menu Name</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.menu_name %></td>
      <td><%= menu.description %></td>
      <td><%= link_to 'Show', menu_path(menu) %></td>
      <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
      <td><%= link_to 'Destroy', menu_path(menu),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>