<h3>Add Address</h3>
<%= form_with(model: [@user, @address], local: true) do |form| %>
  <p>
    <%= form.label :address_1 %><br>
    <%= form.text_field :address1 %>
  </p>
  <p>
    <%= form.label :address_2_optional %><br>
    <%= form.text_field :address2 %>
  </p>
  <p>
    <%= form.label :country %><br>
    <%= form.select :country, ['Chosse', 'US', 'INDIA'] %>
  </p>
  <p>
    <%= form.label :state %><br>
    <%= form.text_field :state %>
  </p>
  <p>
    <%= form.label :zip %><br>
    <%= form.text_field :zip %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

